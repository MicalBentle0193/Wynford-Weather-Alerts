# ios/Podfile
platform :ios, '15.0'

# Disable CocoaPods analytics
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

use_frameworks!
use_modular_headers!

# Ignore all warnings from Pods
inhibit_all_warnings!

target 'Runner' do
  # Flutter Pod helper
  use_frameworks!
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # Pods for Firebase and notifications
  pod 'Firebase/Core', '12.0.0'
  pod 'Firebase/Auth', '12.0.0'
  pod 'Firebase/Firestore', '12.0.0'
  pod 'FlutterLocalNotifications', :path => '../.symlinks/plugins/flutter_local_notifications/ios'

  # Any other Flutter plugins will be auto-installed by flutter_install_all_ios_pods
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end
