# Podfile for Wynford Weather Mission
platform :ios, '13.0'

use_frameworks!

target 'Runner' do
  # Flutter engine
  pod 'Flutter', :path => 'ios/.ios/Flutter/engine'

  # Firebase pods (adjust versions if needed)
  pod 'FirebaseCore', '~> 12.0'
  pod 'FirebaseFirestore', '~> 12.0'
  pod 'FirebaseAuth', '~> 12.0'
  pod 'FirebaseMessaging', '~> 12.0'

  # Other pods can go here
  # pod 'SomeOtherPod', '~> version'

  # Fix simulator arm64 issue
  post_install do |installer|
    installer.pods_project.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end
