# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats. Disable if you want.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Include the Flutter Pod helper
require_relative '../Flutter/ephemeral/.flutter-plugins-dependencies'

# Comment the next line if using frameworks is not needed
use_frameworks!

# Pods for Runner
target 'Runner' do
  # Install all Flutter pods
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
