platform :ios, '11.0'

use_frameworks!
use_modular_headers!

target 'Runner' do
  flutter_application_path = '../..'

  # Instead of loading podhelper.rb, directly include Flutter framework
  pod 'Flutter', :path => File.join(flutter_application_path, '.ios', 'Flutter', 'engine')

  # Example pods (Firebase, etc.)
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'

  # Add any other plugins manually if needed
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
